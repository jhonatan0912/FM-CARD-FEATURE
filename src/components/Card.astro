---
interface Card {
  classList: string;
  title: string;
  content: string;
  logo: string;
}

const { classList, title, content, logo } = Astro.props;
---

<style>
  .title {
    color: var(--Very-Dark-Blue);
  }
  .content {
    color: var(--Grayish-Blue);
  }
  .red {
    border-top: 5px solid var(--Red);
  }
  .cyan {
    border-top: 5px solid var(--Cyan);
  }
  .orange {
    border-top: 5px solid var(--Orange);
  }
  .blue {
    border-top: 5px solid var(--Blue);
  }
</style>
<section class={classList}>
  <p class="title font-bold text-2xl">{title}</p>
  <p class="content mt-2 break-words w-11/12">{content}</p>
  <div class="flex justify-end mt-10">
    <img src={logo} alt={title} />
  </div>
</section>
